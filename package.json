{
  "name": "mermaid-formatter",
  "version": "0.1.0",
  "description": "A formatter for Mermaid diagram syntax",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "mmdfmt": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mermaid",
    "formatter",
    "diagram",
    "markdown"
  ],
  "author": "chenyanchen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chenyanchen/mermaid-formatter.git"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@mermaid-js/parser": "^0.6.3"
  }
}
